{
    "editor.accessibilitySupport": "off",
    "editor.wordWrap": "off",
    "[markdown]": {
        "editor.wordWrap": "off"
    },
    "cSpell.customDictionaries": {
        "custom-dictionary-workspace": {
            "name": "custom-dictionary-workspace",
            "path": "${workspaceFolder:PoEDbScraper}/.cspell/custom-dictionary-workspace.txt",
            "addWords": true,
            "scope": "workspace"
        }
    },
    "cSpell.ignoreRegExpList": [
        "(?:href|src|to)=\".+?\"", // Urls
        "/[a-z]+" // Partial Urls
    ],
    "cSpell.language": "en-GB"
}